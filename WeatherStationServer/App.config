<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<system.serviceModel>
		<services>
			<service name="WeatherStationServer.WeatherService">
				<endpoint address="net.tcp://localhost:8000/WeatherService"
						  binding="netTcpBinding"
						  bindingConfiguration="StreamedNetTcpBinding"
						  contract="WeatherStationCommon.IServiceContract"/>
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:8000"/>
					</baseAddresses>
				</host>
			</service>
		</services>
		<bindings>
			<netTcpBinding>
				<binding name="StreamedNetTcpBinding"
						 transferMode="Streamed"
						 maxReceivedMessageSize="10000000"
						 openTimeout="00:00:30"
						 sendTimeout="00:00:30"
						 receiveTimeout="00:10:00">
				</binding>
			</netTcpBinding>
		</bindings>
	</system.serviceModel>
	<appSettings>
		<add key="HI_max_threshold" value="40"/>
		<add key="SH_threshold" value="0.5"/>
		<add key="DataDirectory" value=".\Data"/>
	</appSettings>
</configuration>